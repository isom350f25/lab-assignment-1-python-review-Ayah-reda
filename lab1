def main():
    item_name  = []
    item_price = []

    while True:
        item = input("Enter student name please (or press Enter to finish): ").strip()
        if item == "":
            break 

        while True:
            price = input(f"Enter price for {item}: ")
            if price.replace('.', '', 1).isdigit():
                price = float(price)
                if 0 <= price <= 200:
                    item_name.append(item)
                    item_price.append(price)
                    break  # valid, exit loop
                else:
                    print("Error: please enter a number between 0 and 200")
            else:
                print("Invalid input, please enter a valid number")

    if len(item_name) == 0:
        print("Erroe , No items entered.")
        return

    count_items = len(item_name)
    avg_price = sum(item_price) / count_items
    max_price = max(item_price)
    min_price = min(item_price)

    max_item = item_name[item_price.index(max_price)]
    min_item = item_name[item_price.index(min_price)]

    print(f"Total items: {count_items}")
    print(f"Average price: {avg_price:.2f}")
    print(f"Highest price: {max_price} ({max_item})")
